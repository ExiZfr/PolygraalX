# ══════════════════════════════════════════════════════════════════════════════
# POLYMARKET WALLET CONFIGURATION (REQUIRED)
# ══════════════════════════════════════════════════════════════════════════════

# Your Polygon private key (hex format with 0x prefix)
# This is the SIGNING key, not necessarily the key holding funds
# Example: 0x1234567890abcdef...
POLYGON_PRIVATE_KEY=

# Your Polymarket proxy wallet address (the address holding USDC)
# Find this at: polymarket.com > Profile > Wallet
# Example: 0x14aab61f40d75a7a62a1c4b7b210929962560184
FUNDER_ADDRESS=

# Signature type - depends on how you created your Polymarket account:
#   0 = MetaMask / Hardware wallet / Direct EOA
#   1 = Email / Magic wallet (MOST COMMON - default)
#   2 = Browser extension proxy wallet
SIGNATURE_TYPE=1

# ══════════════════════════════════════════════════════════════════════════════
# TRADING PARAMETERS
# ══════════════════════════════════════════════════════════════════════════════

# Amount to bet per trade in USDC
# Start small (1-5) for testing, scale up when confident
BET_AMOUNT_USDC=10

# Z-Score threshold to trigger a trade
# 2.5 = aggressive (more trades, more risk)
# 3.0 = conservative (fewer trades, higher quality)
# 3.5 = very conservative
ZSCORE_THRESHOLD=2.5

# Alternative trigger: percentage move in 1 minute
# Used as fallback if Z-Score calculation is unreliable
PCT_MOVE_THRESHOLD=0.5

# Rolling window for volatility calculation (seconds)
LOOKBACK_WINDOW=60

# Minimum time before market expiry to enter a trade (seconds)
# Prevents entering too close to expiry
MIN_TIME_TO_EXPIRY=300

# Maximum time before market expiry to enter a trade (seconds)  
# Ensures we're trading the "current" market
MAX_TIME_TO_EXPIRY=840

# ══════════════════════════════════════════════════════════════════════════════
# ASSET CONFIGURATION
# ══════════════════════════════════════════════════════════════════════════════

# Comma-separated list of assets to trade
# Valid values: BTC, ETH
# RECOMMENDED: BTC only (75% win rate in testing vs 50% for ETH)
TRADE_ASSETS=BTC

# ══════════════════════════════════════════════════════════════════════════════
# RISK MANAGEMENT
# ══════════════════════════════════════════════════════════════════════════════

# Maximum concurrent positions
MAX_POSITIONS=2

# Z-Score threshold to close position (mean reversion exit)
EXIT_ZSCORE_THRESHOLD=0.5

# Time before expiry to force-close position (seconds)
FORCE_EXIT_BEFORE_EXPIRY=120

# ══════════════════════════════════════════════════════════════════════════════
# LOGGING & MONITORING
# ══════════════════════════════════════════════════════════════════════════════

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (relative to working directory)
LOG_FILE=bot.log

# Maximum log file size in bytes (10MB default)
LOG_MAX_BYTES=10000000

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ══════════════════════════════════════════════════════════════════════════════
# PAPER TRADING MODE (For testing without real money)
# ══════════════════════════════════════════════════════════════════════════════

# Enable paper trading mode (true/false)
# When enabled, no real trades are executed - uses simulated account
# You can run paper trading WITHOUT setting POLYGON_PRIVATE_KEY
PAPER_TRADING=false

# Starting balance for paper trading account (in USDC)
PAPER_BALANCE=10.0
